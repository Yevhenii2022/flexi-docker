{
	"name": "webpack_theme",
	"version": "1.0.0",
	"description": "WordPress theme with Webpack bundling",
	"author": "Automattic Theme Team",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"WordPress",
		"Theme"
	],
	"homepage": "https://github.com/Automattic/_s#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Automattic/_s.git"
	},
	"bugs": {
		"url": "https://github.com/Automattic/_s/issues"
	},
	"devDependencies": {
		"@wordpress/scripts": "^19.2.2",
		"css-loader": "^6.8.1",
		"dir-archiver": "^1.1.1",
		"mini-css-extract-plugin": "^2.7.6",
		"rtlcss": "^3.5.0",
		"sass": "^1.66.1",
		"sass-loader": "^13.3.2",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	},
	"rtlcssConfig": {
		"options": {
			"autoRename": false,
			"autoRenameStrict": false,
			"blacklist": {},
			"clean": true,
			"greedy": false,
			"processUrls": false,
			"stringMap": []
		},
		"plugins": [],
		"map": false
	},
	"scripts": {
		"start": "webpack --watch --mode development",
		"build": "webpack --mode production",
		"compile:rtl": "rtlcss style.css style-rtl.css",
		"lint:scss": "wp-scripts lint-style 'src/**/*.scss'",
		"lint:js": "wp-scripts lint-js 'src/**/*.js'",
		"bundle": "dir-archiver --src . --dest ../theme.zip --exclude node_modules .git .github .DS_Store package-lock.json yarn.lock"
	},
	"main": "index.js"
}
